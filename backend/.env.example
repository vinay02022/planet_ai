# Database (Render will provide this)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/workflow_db

# ChromaDB - Leave empty to use local persistent storage (recommended for cloud)
# CHROMA_HOST=localhost
# CHROMA_PORT=8000

# Gemini API Key (required)
GOOGLE_API_KEY=your-google-api-key

# Web Search
SERPAPI_KEY=your-serpapi-key

# App
DEBUG=false

# Frontend URL for CORS (set to your Vercel URL in production)
FRONTEND_URL=https://your-app.vercel.app
